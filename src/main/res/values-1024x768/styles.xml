<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="applicationTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="mySpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">#555</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_bt_no</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.picker" parent="android:Theme.Holo.Dialog">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">#111</item>
    </style>
    <!-- 空调弹出及消失动画 -->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
    <!-- 主界面导航栏 -->
    <style name="radio_button_style">
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_width">96dp</item>
        <item name="android:button">@null</item>
    </style>
    <!-- 主界面下方语音识别等 -->
    <style name="ibtn_main_bottom">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">52dp</item>
        <item name="android:scaleType">center</item>
    </style>
    <!-- 主界面下方温度控制 -->
    <style name="btn_main_bottom_ac">
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">60dp</item>
    </style>
    <!-- 主界面下方空调pop -->
    <style name="btn_main_bottom_popac">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <!-- 主界面下方空调 -->
