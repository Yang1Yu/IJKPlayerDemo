    <style name="media_music_music" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_media_music</item>
    </style>
    <!-- 收音机界面进度条 -->
    <style name="radio_pinlv" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_radio_seekbar</item>
            
    </style>
