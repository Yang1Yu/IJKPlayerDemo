    <style name="pbar_bt_music" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progressbar_bt_music</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">5dip</item>
            
    </style>
    <!-- 设置界面导航栏 -->
    <style name="set_navigation">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">22sp</item>
