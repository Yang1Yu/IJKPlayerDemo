<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_bt_pcb_head"
        android:layout_width="70dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="18dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_bt_pcb_head"/>

    <TextView
        android:id="@+id/tv_bt_pcb_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/iv_bt_pcb_head"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="30sp"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/tv_bt_pcb_number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_bt_pcb_name"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@+id/tv_bt_pcb_name"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="30sp"
        android:typeface="serif">
    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_bt_pcb_name"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_bt_line"/>

</RelativeLayout>
