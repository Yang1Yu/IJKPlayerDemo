<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bt_dial_bgtop"
        android:layout_width="670dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_bt_dial_top"/>

    <EditText
        android:id="@+id/et_bt_dial"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_bt_dial_bgtop"
        android:layout_alignTop="@id/iv_bt_dial_bgtop"
        android:layout_marginLeft="168dp"
        android:layout_marginTop="48dp"
        android:background="@null"
        android:focusable="false"
        android:gravity="right|center_vertical"
        android:hint="@null"
        android:longClickable="false"
        android:scrollbars="horizontal"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="45sp"
        android:typeface="serif"/>

    <TextView
        android:id="@+id/tv_bt_dial_conntext"
        android:layout_width="185dp"
        android:layout_height="28dp"
        android:layout_alignLeft="@+id/btn_bt_dial_disconn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="当前连接设备"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_bt_dial_conn"
        android:layout_width="185dp"
        android:layout_height="28dp"
        android:layout_alignLeft="@+id/btn_bt_dial_disconn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="autohejia"
        android:textColor="#fff"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_bt_dial_disconn"
        android:layout_width="185dp"
        android:layout_height="53dp"
        android:layout_alignLeft="@id/iv_bt_dial_bgtop"
        android:layout_alignTop="@id/iv_bt_dial_bgtop"
        android:layout_marginLeft="466dp"
        android:layout_marginTop="111dp"
        android:background="@drawable/img_bt_dial_disconn"
        android:text="断开"
        android:textColor="#111"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_bt_dial_number"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="188dp"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="#fff"
        android:textSize="25sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_bt_dial_status"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="344dp"
        android:layout_marginTop="188dp"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="#fff"
        android:textSize="25sp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/chronometer"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="344dp"
        android:layout_marginTop="188dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="00:00"
        android:textColor="#fff"
        android:textSize="25sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_bt_dial_1"
        style="@style/btn_bt_dial_base"
        android:layout_below="@+id/iv_bt_dial_bgtop"
        android:layout_marginTop="45dp"
        android:background="@drawable/img_bt_dial_1"/>

    <Button
        android:id="@+id/btn_bt_dial_2"
        style="@style/btn_bt_dial"
        android:layout_alignTop="@+id/btn_bt_dial_1"
        android:layout_toRightOf="@+id/btn_bt_dial_1"
        android:background="@drawable/img_bt_dial_2"/>

    <Button
        android:id="@+id/btn_bt_dial_3"
        style="@style/btn_bt_dial"
        android:layout_alignTop="@+id/btn_bt_dial_1"
        android:layout_toRightOf="@+id/btn_bt_dial_2"
        android:background="@drawable/img_bt_dial_3"/>

    <Button
        android:id="@+id/btn_bt_dial_4"
        style="@style/btn_bt_dial_base"
        android:layout_below="@+id/btn_bt_dial_1"
        android:background="@drawable/img_bt_dial_4"/>

    <Button
        android:id="@+id/btn_bt_dial_5"
        style="@style/btn_bt_dial"
        android:layout_alignTop="@+id/btn_bt_dial_4"
        android:layout_toRightOf="@+id/btn_bt_dial_4"
        android:background="@drawable/img_bt_dial_5"/>

    <Button
        android:id="@+id/btn_bt_dial_6"
        style="@style/btn_bt_dial"
        android:layout_alignTop="@+id/btn_bt_dial_4"
        android:layout_toRightOf="@+id/btn_bt_dial_5"
        android:background="@drawable/img_bt_dial_6"/>

    <Button
        android:id="@+id/btn_bt_dial_7"
        style="@style/btn_bt_dial_base"
        android:layout_below="@+id/btn_bt_dial_4"
        android:background="@drawable/img_bt_dial_7"/>

    <Button
        android:id="@+id/btn_bt_dial_8"
        style="@style/btn_bt_dial"
        android:layout_alignTop="@+id/btn_bt_dial_7"
        android:layout_toRightOf="@+id/btn_bt_dial_7"
        android:background="@drawable/img_bt_dial_8"/>

    <Button
        android:id="@+id/btn_bt_dial_9"
        style="@style/btn_bt_dial"
        android:layout_alignTop="@+id/btn_bt_dial_7"
        android:layout_toRightOf="@+id/btn_bt_dial_8"
        android:background="@drawable/img_bt_dial_9"/>

    <Button
        android:id="@+id/btn_bt_dial_star"
        style="@style/btn_bt_dial_base"
        android:layout_below="@+id/btn_bt_dial_7"
        android:background="@drawable/img_bt_dial_star"/>

    <Button
        android:id="@+id/btn_bt_dial_0"
        style="@style/btn_bt_dial"
        android:layout_alignTop="@+id/btn_bt_dial_star"
        android:layout_toRightOf="@+id/btn_bt_dial_star"
        android:background="@drawable/img_bt_dial_0"/>

    <Button
        android:id="@+id/btn_bt_dial_well"
        style="@style/btn_bt_dial"
        android:layout_alignTop="@+id/btn_bt_dial_star"
        android:layout_toRightOf="@+id/btn_bt_dial_0"
        android:background="@drawable/img_bt_dial_well"/>

    <Button
        android:id="@+id/btn_bt_dial_delete"
        android:layout_width="140dp"
        android:layout_height="68dp"
        android:layout_below="@+id/iv_bt_dial_bgtop"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="114dp"
        android:layout_toRightOf="@id/btn_bt_dial_3"
        android:background="@drawable/img_bt_dial_delete"/>

    <Button
        android:id="@+id/btn_bt_dial_call"
        android:layout_width="140dp"
        android:layout_height="68dp"
        android:layout_below="@+id/btn_bt_dial_delete"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="41dp"
        android:layout_toRightOf="@id/btn_bt_dial_3"
        android:background="@drawable/img_bt_dial_call"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btn_bt_dial_cut"
        android:layout_width="140dp"
        android:layout_height="68dp"
        android:layout_below="@+id/btn_bt_dial_delete"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="41dp"
        android:layout_toRightOf="@id/btn_bt_dial_3"
        android:background="@drawable/img_bt_dial_cut"
        android:visibility="gone"/>

</RelativeLayout>
