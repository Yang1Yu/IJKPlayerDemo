<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    >

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:orientation="horizontal">-->

    <LinearLayout
        android:id="@+id/ll_list"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_media_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/img_media_item_music"/>

        <TextView
            android:id="@+id/tv_media_item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:ellipsize="marquee"
            android:focusable="false"
            android:gravity="center_vertical"
            android:paddingLeft="64dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@drawable/color_media_list_text"
            android:textSize="25sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_media_delete"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingRight="32dp"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:src="@drawable/bg_media_item_delete"/>

    </LinearLayout>
    <!--</LinearLayout>-->

    <!--  <ImageView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/tv_bt_pcb_name"
         android:scaleType="fitXY"
         android:src="@drawable/img_bt_line" />-->

</LinearLayout>
